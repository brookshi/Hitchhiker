    "version": "0.2.0",
    "configurations": [{
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/client/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack debug",
            "args": [],
            "cwd": "${workspaceRoot}/client",
            "env": {
                "NODE_ENV": "development"
            },
            "outDir": "${workspaceRoot}/client",
            "program": "${workspaceRoot}/client/debugwebpack.js",
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "name": "启动程序",
            "outDir": "${workspaceRoot}/build",
            "program": "${workspaceRoot}/build/index.js",
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "attach",
            "name": "附加到进程",
            "port": 5858,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}